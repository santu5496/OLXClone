    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        html, body {
            overflow-x: hidden;
            width: 100%;
            height: 100%;
        }

        /* Header styling */
        header {
            top: 0;
            left: 0;
            width: 100%;
            height: 40px;
            background: var(--bg-secondary);
            display: flex;
            align-items: center;
            padding: 0 20px;
            justify-content: space-between; /* Push items apart */
        }

        .header-end {
            margin-left: auto; /* Pushes to the right */
        }
        /* Sidebar styling */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            width: 60px;
            height: 100vh;
            background: var(--bg-secondary);
            transition: 0.5s;
            overflow-x: hidden;
            z-index: 1100; /* Ensures it overlays the header */
        }

            nav.active {
                width: 230px;
            }

            nav ul {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            }

                nav ul li {
                    list-style: none;
                    width: 100%;
                    position: relative;
                }

                    nav ul li a {
                        position: relative;
                        display: flex;
                        align-items: center;
                        text-decoration: none;
                        color: var(--cl-text);
                        transition: 0.2s;
                        width: 100%;
                    }

                        nav ul li a .icon {
                            min-width: 60px;
                            height: 60px;
                            line-height: 60px;
                            text-align: center;
                        }

                        nav ul li a .title {
                            font-size: 0.85em;
                        }

                        nav ul li a .icon * {
                            font-size: 1.1em;
                        }

                        nav ul li a:hover {
                            color: var(--bg-primary);
                        }

                    nav ul li:hover a::before {
                        background-color: var(--bg-active);
                        width: 100%;
                    }

        /* Show toggle button */
        .toggle {
            cursor: pointer;
        }

        .mainContainer {
            margin-left: 60px;
            transition: margin-left 0.5s ease;
        }

            .mainContainer.active {
                margin-left: 230px !important;
            }

        /* Colors */
        :root {
            --bg-primary: #41444b;
            --bg-secondary: #ffe0cc70;
            --bg-active: #fddb3a;
            --bg-dark: #ffb380;
            --cl-text: black;
        }

        #sidebarToggleIcon {
            display: block;
        }

        #headerMenuToggle {
            display: none;
        }
        /* Show header toggle only on small screens */
        @@media (max-width: 768px) {
            .toggle

        {
            display: block;
        }

        nav {
            left: -60px;
            top: 40px;
        }

        .mainContainer, .mainContainer.active {
            margin-left: 0px !important
        }

        nav.active {
            left: 0;
            width: 50%;
        }

        #sidebarToggleIcon {
            display: none;
        }

        #headerMenuToggle {
            display: block;
        }

        }

        .stylish-text {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif, cursive;
            font-size: 20px;
            font-weight: bold;
            color: black; /* Stylish color */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Soft shadow effect */
        }

        .breadcrumb {
